<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
    
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />

    <RelativeLayout
        android:id="@+id/item_top"
        android:layout_width="match_parent"
        android:layout_height="88dp" >

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:src="@drawable/ic_launcher"
            android:layout_marginTop="10dp"
            />
        <RelativeLayout
            android:id="@+id/item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:layout_toRightOf="@id/item_icon" >

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#ff333333"
                android:text="大灰狼"
                android:textSize="16dp" />

            <RatingBar

                android:id="@+id/item_rating"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_below="@id/item_title"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="5dp"
                android:isIndicator="true"
                android:progressDrawable="@drawable/process_ratingbar"
                android:rating="2.5" />


            <TextView
                android:id="@+id/item_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_rating"
                android:singleLine="true"
                android:textColor="#ff7a7a7a"
                android:text="浏览量:"
                android:textSize="12dp" />



            <TextView
                android:id="@+id/item_size1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_rating"
                android:layout_toRightOf="@+id/item_size"
                android:singleLine="true"
                android:textColor="#ff7a7a7a"
                android:text="111次"
                android:layout_marginLeft="2dp"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/item_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_size"
                android:singleLine="true"
                android:textColor="#ff7a7a7a"
                android:text="15757831724"
                android:layout_marginTop="5dp"
                android:textSize="12dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/shop_judge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商铺评价"
                android:layout_alignParentRight="true"
                android:textColor="#ff0000"

                />


            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/man_judge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人评价"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/shop_judge"

                />
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/man_judge1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ff0000"
                    android:layout_below="@+id/shop_judge"
                    android:layout_toLeftOf="@+id/man_judge"


                    />
            </RelativeLayout>
        </RelativeLayout>




    </RelativeLayout>


<RelativeLayout
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon01"
        />
    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="店铺地址"
        android:layout_toRightOf="@+id/iv1"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
    />

    <ImageView
        android:id="@+id/iv2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon01"
        android:layout_below="@+id/iv1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="15555567778"
        android:layout_toRightOf="@+id/iv1"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:layout_below="@+id/tv_address"
        />

    <ImageView
        android:id="@+id/guanzhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/search_icon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/vd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginTop="5dp"
        android:layout_below="@+id/guanzhu"
        android:text="已关注"
        android:layout_toLeftOf="@+id/text1"
        />
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/guanzhu"
        android:text="0"
        android:layout_toLeftOf="@+id/errwa"
        android:textColor="#ff0000"
        />
    <TextView
        android:id="@+id/errwa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/guanzhu"
        android:text="人"
        />


</RelativeLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
      android:gravity="center"
        android:background="@drawable/solid"
        android:layout_marginTop="10dp"
        >


    <ImageView
        android:id="@+id/text22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon01"
        />


    <TextView
        android:id="@+id/textww"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="导航到这边去"
        android:layout_toRightOf="@+id/text22"
      />

</RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/solid"
        >
        <ImageView
            android:id="@+id/text2233"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon01"
            />
        <TextView
            android:id="@+id/textww21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二维码名片"
            android:layout_toRightOf="@+id/text2233"
            />

    </RelativeLayout>


</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/solid"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约去消费"

            />
    </RelativeLayout>



    
    
    
<WebView  
    android:id="@+id/show"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    />


</LinearLayout>

    
</ScrollView>

    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/layout_pay_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="#cc000000" >

        <CheckBox
            android:id="@+id/btn_check_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:paddingLeft="22dp"
            android:button="@drawable/btn_check"
            android:textColor="@color/white"
            android:textSize="@dimen/small_medium_text_size"
            android:text="全选" />

        <TextView
            android:id="@+id/tv_add_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btn_check_all"
            android:layout_marginTop="6dp"
            android:text="合计："
            android:textSize="@dimen/large_middle_text_size"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_add_all"
            android:layout_below="@+id/tv_add_all"
            android:textColor="@color/white"
            android:text="总额：￥0.00" />
        
        <RelativeLayout 
            android:id="@+id/btn_pay"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:background="@drawable/btn_add_to_cart" >
            
        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="@dimen/large_text_size"
            android:textColor="@color/white"
            android:text="去结算" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_pay"
            android:layout_toRightOf="@+id/tv_pay"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/small_medium_text_size"
            android:text="(0)" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_add_all"
            android:layout_toRightOf="@+id/tv_add_all"
            android:text="￥0.00"
            android:textSize="@dimen/large_middle_text_size"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>




</LinearLayout>
